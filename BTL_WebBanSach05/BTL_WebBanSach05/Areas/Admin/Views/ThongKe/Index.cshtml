
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_thongke.cshtml";
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            GetTK(2022);
        });
        function GetTK(year) {
            console.log(year);
            $.ajax({
                url: 'https://localhost:44357/api/thongkeapi/' + year,
                method: 'GET',
                contentType: 'json',
                dataType: 'json',
                error: function (response) {
                },
                success: function (reponse) {
                    const len = reponse.length;
                    let table = '<tr>';
                    var j = 0;

                    for (var i = 0; i < 12; ++i) {
                        if (len > 0) {
                            if (reponse[j].Thang == i + 1) {
                                table = table +
                                    '<td>' + reponse[j].Thang + '</td>' +
                                    '<td>' + reponse[j].TongHD + '</td>' +
                                    '<td>' + reponse[j].TongSP + '</td>' +
                                    '<td>' + reponse[j].TongTien + '</td></tr>';
                                if (j < len - 1) {
                                    j = j + 1;
                                }
                            }
                            else {
                                table = table +
                                    '<td>' + (i + 1) + '</td>' +
                                    '<td>0</td>' +
                                    '<td>0</td>' +
                                    '<td>0</td></tr>';
                            }
                        }
                        else {
                            table = table +
                                '<td>' + (i + 1) + '</td>' +
                                '<td>0</td>' +
                                '<td>0</td>' +
                                '<td>0</td></tr>';
                        }
                    }
                    document.getElementById('thongke').innerHTML = table;
                },
                fail: function (response) {
                }
            });
        }
        $("#year").change(function () {
            GetTK($(this).val());
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            GetSPMax();
        });
        function GetSPMax() {
            $.ajax({
                url: 'https://localhost:44357/api/ThongKeSpApi',
                method: 'GET',
                contentType: 'json',
                dataType: 'json',
                error: function (response) {
                },
                success: function (reponse) {
                    const len = reponse.length;
                    let table = '<tr>';
                    for (var j = 0; j < len; j++) {
                        table = table +
                            '<td>' + reponse[j].TenSach + '</td>' +
                            '<td>' + reponse[j].GiaSach + '</td>' +
                            '<td><small class="text-success mr-1"><i class="fas fa-arrow-up"></i>12%</small>' + reponse[j].DoanhThu + '</td>' +
                            '<td><a href="#" class="text-muted"><i class="fas fa-search"></i></a></td></tr>';
                    }
                    document.getElementById('spMax').innerHTML = table;
                },
                fail: function (response) {
                }
            });
        }
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            GetChart(2022);
        });
        function GetChart(year) {
            console.log(year);
            $.ajax({
                url: 'https://localhost:44357/api/thongkeapi/' + year,
                method: 'GET',
                contentType: 'json',
                dataType: 'json',
                error: function (response) {
                },
                success: function (reponse) {
                    var xValues = [];
                    var yValues = [];
                    var maxm = 0;
                    var zValue = [];
                    var barColors1 = "red";

                    const len = reponse.length;
                    let table = '<tr>';
                    var j = 0;
                    for (var i = 0; i < 12; ++i) {
                        if (len > 0) {
                            if (reponse[j].Thang == i + 1) {
                                xValues[i] = reponse[j].Thang;
                                yValues[i] = reponse[j].TongTien
                                if (yValues[i] > maxm) {
                                    maxm = yValues[i];
                                }
                                if (j < len - 1) {
                                    j = j + 1;
                                }
                            }
                            else {
                                xValues[i] = i + 1;
                                yValues[i] = 0;
                            }
                        }
                        else {
                            xValues[i] = i + 1;
                            yValues[i] = 0;
                        }
                    }
                    new Chart("myChart", {
                        type: "line",
                        data: {
                            labels: xValues,
                            datasets: [{
                                fill: false,
                                lineTension: 0,
                                backgroundColor: "rgba(0,0,255,1.0)",
                                borderColor: "rgba(0,0,255,0.1)",
                                data: yValues
                            }]
                        },
                        options: {
                            legend: { display: false },
                            title: {
                                display: true,
                                text: "Biểu đồ doanh thu năm " + year
                            },
                            scales: {
                                yAxes: [{ ticks: { min: 0, max: maxm } }],
                            }
                        }
                    });

                },
                fail: function (response) {
                }
            });
        }
        $("#year").change(function () {
            GetChart($(this).val());
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

}

