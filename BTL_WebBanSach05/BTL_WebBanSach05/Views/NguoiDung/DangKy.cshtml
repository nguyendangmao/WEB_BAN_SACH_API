@model BTL_WebBanSach05.Models.TK_KHACHHANG

@{
    ViewBag.Title = "DangNhapAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutDangKy.cshtml";
}

@using (@Html.BeginForm("DangKy", "NguoiDung", FormMethod.Post, htmlAttributes: new { @class = "form", @id = "form" }))
{
    <h1>Đăng ký</h1>
    @ViewBag.ThongBao
    <form name="login" onsubmit="return validateForm()" action="">
        <div class="txt_field">
            <input name="name" type="text" required="">
            <span></span>
            <label>Họ và tên</label>
        </div>
        <div class="txt_field">
            <input name="add" type="text" required="">
            <span></span>
            <label>Địa chỉ</label>
        </div>
        <div class="txt_field">
            <input name="phone" type="text" required="">
            <span></span>
            <label>Số điện thoại</label>
        </div>
        <div class="txt_field">
            <input name="password" type="password" required="">
            <span></span>
            <label>Mật khẩu</label>
        </div>
        <div class="pass">Quên mật khẩu?</div>
        <input type="submit" value="Đăng ký">
        <div class="signup_link">
            <a href="#">@Html.ActionLink("Đăng nhập", "DangNhap")</a>
        </div>
    </form>
}

